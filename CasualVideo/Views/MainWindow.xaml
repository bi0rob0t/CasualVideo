<Window x:Class="CasualVideo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CasualVideo"
        xmlns:viewmodel="clr-namespace:CasualVideo.ViewModels"
        mc:Ignorable="d"
        Title="Main" Height="450" Width="800">

    <Window.DataContext>
        <viewmodel:MainWindowViewModel />
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="8*"/>
            <RowDefinition Height="97*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Menu>
                <MenuItem Header="File">
                    <Button>tt</Button>
                </MenuItem>
                <MenuItem Header="Edit">
                    <Button>tt</Button>
                </MenuItem>
                <MenuItem Header="Help" Command ="{Binding OpenHelp}">
                    
                </MenuItem>
            </Menu>
            
        </Grid>
        <Grid Grid.Row ="1">
            <MediaElement x:Name="mediaPlayer" Source="D:\Wildlife.wmv"></MediaElement>
        </Grid>
    </Grid>
</Window>
